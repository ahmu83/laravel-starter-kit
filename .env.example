###############################################################################
# Application
###############################################################################

APP_NAME="Laravel Starter Kit"
APP_ENV=local
APP_KEY=base64:sKWVkrYgaFojx8H2KR1Jd8EAwdeWo9iQfRsKiAl/0fE=
APP_DEBUG=true

# Local canonical URL (Valet / .test)
APP_URL=http://localhost:8000
# APP_URL=https://dvc-laravel-starter-kit.test

# Public URL when accessed through Cloudflare Tunnel / proxy
# Recommended: wire config('app.url') to APP_PUBLIC_URL first, then APP_URL fallback.
# APP_FORWARDING_URL=https://dvc-laravel-starter-kit-test.devraa.com

# override APP_URL when forwarding is needed
# APP_URL="${APP_FORWARDING_URL}"

# Vite
VITE_APP_NAME="${APP_NAME}"

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP built-in server (if used)
PHP_CLI_SERVER_WORKERS=4

###############################################################################
# Database
###############################################################################

# SQLite (default - zero config)
DB_CONNECTION=sqlite

# MySQL Configuration (Uncomment and configure when needed)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE="DB_NAME"
# DB_USERNAME="DB_USER"
# DB_PASSWORD="DB_PASS"
# DB_TABLE_PREFIX="laravel_"

# WordPress DB (if used)
DB_CONNECTION_WP=wordpress
DB_TABLE_PREFIX_WP=wp_

# PostgreSQL (optional)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE="DB_NAME"
# DB_USERNAME="DB_USER"
# DB_PASSWORD="DB_PASS"
# DB_PREFIX="laravel_"

###############################################################################
# Logging
###############################################################################

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

###############################################################################
# Security / Hashing
###############################################################################

BCRYPT_ROUNDS=12

###############################################################################
# Session / Cache / Queue
###############################################################################

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/

# If you want cookies shared across subdomains (e.g. *.devraa.com), set this:
# SESSION_DOMAIN=.devraa.com
# Otherwise keep it null for local .test:
SESSION_DOMAIN=null

CACHE_STORE=database
# CACHE_PREFIX=

QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

MEMCACHED_HOST=127.0.0.1

# Redis (optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

###############################################################################
# Mail
###############################################################################

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

###############################################################################
# AWS (optional)
###############################################################################

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

###############################################################################
# Developer Tools
###############################################################################

IGNITION_EDITOR=sublime

###############################################################################
# Basic Auth (optional)
###############################################################################

BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=open123

###############################################################################
# Access Control (optional)
###############################################################################

SANDBOX_ALLOWED_EMAILS=admin@example.com,dev@example.com
TOOLBOX_ALLOWED_EMAILS=admin@example.com,dev@example.com

###############################################################################
# API Keys (optional - for ApiAuth middleware)
###############################################################################

# Generate keys:
# php -r "echo bin2hex(random_bytes(32));"
# or: php artisan make:api-key
API_KEY_1=
API_KEY_2=
API_KEY_3=

###############################################################################
# Queue Viewer (Vantage) - https://github.com/houdaslassi/vantage
###############################################################################

VANTAGE_ROUTES=false
VANTAGE_AUTH_ENABLED=false

